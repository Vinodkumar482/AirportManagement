﻿
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>@ViewBag.Title - TechAir</title>
    @*<link href="~/Content/HomePage/homepage.css" rel="stylesheet" type="text/css" runat="server" />*@
    <link href="~/Content/Admin/formstyles.css" rel="stylesheet" />
    <link href="~/Content/HomePage/navstyles.css" rel="stylesheet" />
    <style>
        .email {
            margin-bottom: 0px;
            color: white;
            margin-top: 0px;
        }

        .usertype {
            margin-bottom: 0px;
            color: white;
            margin-top: 0px;
        }

        .logout {
            margin-left: 15px;
            font-size: 15px;
            text-decoration: underline;
            padding-top: 0px;
        }

        body {
            background-image: url("https://upgradedpoints.com/wp-content/uploads/2018/10/AdobeStock_63437932.jpeg");
            background-size: cover;
            height: 100vh;
            z-index: -1;
        }

        .user-details {
            padding-right: 15px;
        }

        .name {
            font-size: 30px;
            font-family: Garamond, serif;
            /*font-family: 'Roboto', sans-serif;
            font-family: 'Roboto Mono', monospace;*/
            font-weight: bold;
            margin-top: 5px;
        }
    </style>
<script>
    window.onload = function () {
        var today = new Date().toISOString().split('T')[0];
        document.getElementById('dateInput').setAttribute('min', today);
    }
    document.addEventListener('contextmenu', function (e) {
        e.preventDefault();
    });
</script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
           
            <nav class="navbar fixed-top navbar-light bg-dark nav-style ">
                <div class="admin-nav">
                    <a class="navbar-brand" href="#HomeSection">
                        <img src="https://onewave.techwave.net/assets/images/TW_nimonic.png" width="50" height="50" class="d-inline-block align-top" alt="">
                        <span class="name">TechAir</span>
                    </a>
                    <a class="navbar-brand hoverable" href="@Url.Action("Home", "Admin")">Home</a>
                    <a class="navbar-brand hoverable" href="@Url.Action("Index", "Pilot")">Add Pilot</a>
                    <a class="navbar-brand hoverable" href="@Url.Action("Index", "Plane")">Add Plane</a>
                    <a class="navbar-brand hoverable" href="@Url.Action("Index", "Hanger")">Add Hanger</a>
                </div>
                <div class="d-flex flex-column align-items-center user-details">
                    <p class="email">@Session["email"]</p>
                    <p class="usertype">@Session["type"]</p>
                    <a class="navbar-brand hoverable logout" href="@Url.Action("Logout", "Login")">Logout</a>
                </div>
            </nav>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>