﻿﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/MyScripts/GetPlanes.js"></script>
    <script src="https://kit.fontawesome.com/bb109f0f8b.js" crossorigin="anonymous"></script>

    <title>@ViewBag.Title - TechAir</title>
    <link href="~/Content/HomePage/homepage.css" rel="stylesheet" />

    <link href="~/Content/HomePage/navstyles.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div  class="container">

            <nav   class="navbar fixed-top navbar-light bg-dark nav-style" style="background-color:aquamarine">
                <div>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/Images/LOGO6.png"  width="80" height="40" class="d-inline-block align-top" alt="">

                        @*<img src="~/Content/Images/photo_1693311918600.png" width="90" height="70" class="d-inline-block align-top" alt="">*@
                        @*<img src="https://onewave.techwave.net/assets/images/TW_nimonic.png" width="50" height="50" class="d-inline-block align-top" alt="">*@
                        <span class="name">TechAir</span>
                    </a>
                    <a class="navbar-brand hoverable" href="@Url.Action("Index", "Home")">Home</a>
                    @*<a class="navbar-brand" href="#aboutus">About Us</a>*@
                </div>
                <div class="profile-icon">
                    <img src="~/Content/Images/icons8-male-user-50.png" class="login-icon" />

                    <a class="navbar-brand login text-center hoverable" href="@Url.Action("Index", "Login")">Login</a>

                </div>
            </nav>
        </div>
    </nav>
    <div class="homepage">
        @RenderBody()

        <footer @*class="text-center"*@ style="color:aliceblue;">
            <p>&copy; @DateTime.Now.Year - TechAir</p>
        </footer>


    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
   
</body>

</html>